<div class="account-pages">
    <div class="container">
        <div class="row g-0 bg-white align-items-center">

            <div class="col-lg-6">
                <div class="bg-login">
                    <img src="/images/bg-login-1.png" class="img-fluid" alt="">
                    <div class="auth-contain">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">

                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="text-center text-white my-4 p-4">
                                        <h3 style="color: white;">Yapay Zeka Destekli Cv Oluştur</h3>
                                        <p class="text-white-50 f-20 mt-3">
                                            Üye ol ve Hemen Cv Oluşturmaya Başla.
                                        </p>
                                    </div>
                                </div>


                            </div>
                            <!-- end -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-lg-6">
                <div class="auth-box">
                    <div class="mb-4 mb-md-5 text-center">
                        <a href="javascript:void(0);" class="auth-logo">
                            <img src="images/logo-dark.png" height="24" alt="">
                        </a>
                    </div>

                    <div class="auth-content">
                        <div class="mb-3 pb-3 text-center">
                            <h4 class="fw-normal">Hoş Geldin!</span></h4>
                            <p class="text-muted mb-0">Giriş yapmak için Üyelik bilgilerini doğru şekilde gir.</p>
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["Error"]
                                </div>
                            }

                        </div>
                        <form action="/Home/UyeOl" method="post">

                            <form method="post" action="/KayitOl">
                                <div class="form-floating mb-3">
                                    <input type="text" name="Ad" class="form-control" id="input-ad" placeholder="Ad">
                                    <label for="input-ad">Ad</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="text" name="Soyad" class="form-control" id="input-soyad" placeholder="Soyad">
                                    <label for="input-soyad">Soyad</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="email" name="Email" class="form-control" id="input-email" placeholder="E-Posta">
                                    <label for="input-email">E-Posta</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="password" name="Sifre" class="form-control" id="input-sifre" placeholder="Şifre">
                                    <label for="input-sifre">Şifre</label>
                                </div>

                                <div class="d-grid">
                                    <button class="btn btn-dark" type="submit">Kayıt Ol</button>
                                </div>

                                <hr>

                                <div class="mt-3 text-center">
                                    <p class="mb-0 text-muted">
                                        Hesabınız var mı?
                                        <a href="/UyeOl" class="text-success fw-bold text-decoration-underline ms-1">Üye Ol</a>
                                    </p>
                                </div>
                            </form>

                        </form><!-- end form -->
                        <div class="row justify-content-center align-items-center mt-4 mt-md-5 ">
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                        </div><!-- end row -->
                    </div><!-- auth content -->
                </div>
                <!-- end authbox -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
<!-- END -->




@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                icon: "success",
                title: "Başarılı!",
                text: "Başarıyla kayıt oldunuz.",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "Tamam"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/";
                }
            });


        });
    </script>
}


