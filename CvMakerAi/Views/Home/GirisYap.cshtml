<div class="account-pages">
    <div class="container">
        <div class="row g-0 bg-white align-items-center">

            <div class="col-lg-6">
                <div class="bg-login">
                    <img src="/images/bg-login-1.png" class="img-fluid" alt="">
                    <div class="auth-contain">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">

                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="text-center text-white my-4 p-4">
                                        <h3 style="color: white;">Yapay Zeka Destekli Cv Oluştur</h3>
                                        <p class="text-white-50 f-20 mt-3">
                                            Üye ol ve Hemen Cv Oluşturmaya Başla.
                                        </p>
                                    </div>
                                </div>


                            </div>
                            <!-- end -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-lg-6">
                <div class="auth-box">
                    <div class="mb-4 mb-md-5 text-center">
                        <a href="javascript:void(0);" class="auth-logo">
                            <img src="images/logo-dark.png" height="24" alt="">
                        </a>
                    </div>

                    <div class="auth-content">
                        <div class="mb-3 pb-3 text-center">
                            <h4 class="fw-normal">Hoş Geldin!</span></h4>
                            <p class="text-muted mb-0">Giriş yapmak için Üyelik bilgilerini doğru şekilde gir.</p>
                        </div>
                        <form method="post" action="/GirisYap">
                            <div class="form-floating mb-3">
                                <input type="text" name="Email" class="form-control" id="input-username" placeholder="E-Posta" required>
                                <label for="input-username">E-Posta</label>
                            </div>

                            <div class="form-floating position-relative mb-3">
                                <input type="password" name="Sifre" class="form-control" id="password-input" placeholder="Şifre" required>
                                <label for="password-input">Şifre</label>
                                <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y me-2" id="password-addon" tabindex="-1">
                                    <i class="mdi mdi-eye-outline font-size-18 text-muted"></i>
                                </button>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-dark w-100 shadow-none" type="submit">Giriş Yap</button>
                            </div>

                            <hr>

                            <div class="mt-3 text-center">
                                <p class="mb-0 text-muted">
                                    Hesabınız yok mu?
                                    <a href="/UyeOl" class="text-success fw-bold text-decoration-underline ms-1">Üye Ol</a>
                                </p>
                            </div>
                        </form>

                        <div class="row justify-content-center align-items-center mt-4 mt-md-5 ">
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                            <div class="col-4">
                                <div class="client-images my-3 my-md-0">
                                    <img src="/images/1logo.png" class="mx-auto d-block img-fluid" alt="logo-img">
                                </div>
                            </div>
                            <!-- end col -->
                        </div><!-- end row -->
                    </div><!-- auth content -->
                </div>
                <!-- end authbox -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
<!-- END -->






@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: ' @Html.Raw(TempData["SuccessMessage"])',
            showConfirmButton: false,
            timer: 1500
        });
    </script>
}

@if (ViewBag.Hata != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            text: '@Html.Raw(ViewBag.Hata)',
            showConfirmButton: true,
        });
    </script>
}
